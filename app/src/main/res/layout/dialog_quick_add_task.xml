<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_quick_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề"/>

    <EditText
        android:id="@+id/et_quick_task_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Môn (để trống = dùng tiêu đề)"/>

    <EditText
        android:id="@+id/et_quick_task_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giờ bắt đầu (HH:mm)"
        android:inputType="time"/>

    <EditText
        android:id="@+id/et_quick_task_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời lượng (phút)"
        android:inputType="number"/>

</LinearLayout>


